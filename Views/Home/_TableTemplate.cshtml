@model Bicycle.ViewModels.StudentTeacherViewModel

<h3>학생 리스트</h3>
<table style="width: 100%; table-layout: fixed;">
    <thead>
    <tr class="table-header">
        <th class="table-header-item" style="width:10%;">이름</th>
        <th class="table-header-item" style="width:60%;">제목</th>
        <th class="table-header-item" style="width:10%;">번호</th>
        <th class="table-header-item" style="width:10%;">날짜</th>
        <th class="table-header-item" style="width:10%;">평점</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model.Students)
    {
        <tr class="table-body">
            <td class="table-body-item" style="width:10%">@student.Name</td>
            <td class="table-body-item" style="width:60%">@student.Age</td>
            <td class="table-body-item" style="width:10%"><a asp-controller="Home" asp-action="Detail" asp-route-id="@student.Id">Detail</a></td>
            <td class="table-body-item" style="width:10%"><a asp-controller="Home" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
            <td class="table-body-item" style="width:10%"><a asp-controller="Home" asp-action="Delete" asp-route-id="@student.Id">Delete</a></td>
        </tr>
    }
    </tbody>
</table>